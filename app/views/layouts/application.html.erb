<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:page_title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </head>

  <body>

<% active = (yield(:current_page)) %> 
 
  <div class="container">

    <nav class="nav" style="margin-top: 5px;">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="<%= currently_at(active, 1) %>" href="/">Главная</a>
        </li>
  <% if user_signed_in? %>
        <li class="nav-item">
          <a class="<%= currently_at(active, 2) %>" href="/rooms">Комнаты</a>
        </li>
          <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><%= current_user.login %></a>
    <ul class="dropdown-menu">
      
      
      <form action="/session" method="delete">
      <li><button type="submit" class="dropdown-item">Выйти</button></li>
      </form>
    </ul>
  </li>

  <% else %>
        <li class="nav-item">
           <a class="<%= currently_at(active, 3) %>" href="/users/new">Регистрация</a>
        </li>
        <li class="nav-item">
          <a class="<%= currently_at(active, 4) %>" href="/session/new">Войти</a>
        </li>
      </ul>
  <% end %>
  </nav>

  <% if flash[:class].present? %>
  <div class="<%= flash[:class] %>" role="alert" style="margin-top: 10px;">
  <%= flash[:text] %>
  </div>
  <% end %>

    <%= yield %>

  </div>

  </body>
</html>
