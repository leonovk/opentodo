<% provide :page_title, 'Регистрация' %>
<% provide :current_page, 'Регистрация' %>

<h1>Регистрация</h1>

<%= form_with model: @user do |u| %>

  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Login</label>
    <div class="col-sm-10">
      <%= u.text_field :login, class: 'form-control', id: 'inputEmail3'%>
    </div>
  </div>

  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <%= u.text_field :name, class: 'form-control', id: 'inputEmail3'%>
    </div>
  </div>

  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <%= u.password_field :password, type: 'password', class: 'form-control', id: 'inputPassword3'%>
    </div>
  </div>

    <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <%= u.password_field :password_confirmation, type: 'password', class: 'form-control', id: 'inputPassword3'%>
    </div>
  </div>

<%= u.submit "Register", class: 'btn btn-primary' %>
<% end %> 





