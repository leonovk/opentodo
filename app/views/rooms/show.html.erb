<% provide :page_title, @room.title %>
<% provide :current_page, 'Комнаты' %>


<h1><%= @room.title %></h1>


<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <button class="btn btn-primary me-md-2" type="button">Добавить</button>
  <button class="btn btn-danger" type="button">Удалить</button>
</div>


<div style="margin-top: 10px;">
<% @tasks.each do |tasks| %>

<form action="/tasks/<%= tasks.id %>" method="delete">
<li class="list-group-item">
  <input class="form-check-input me-1" type="submit" value="" aria-label="...">
  <%= tasks.title %>
</li>
</form>


<% end %>
</div>
