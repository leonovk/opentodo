<% provide :page_title, 'Комнаты' %>
<% provide :current_page, 'Комнаты' %>


<div class="d-flex">
  <div class="p-2 flex-grow-1"><h3 style="margin-top: 15px;">Все комнаты:</h3></div>
  <div class="p-2">
  <button class="btn btn-outline-success mt-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapserooms" aria-expanded="false" aria-controls="collapserooms">
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
  <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"></path>
  <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
  </svg></button>
  </div>
</div>



<div class="collapse mb-2" id="collapserooms">
  <div class="card card-body">
    <%= form_with model: @room, data: { controller: "reset", action: "turbo:submit-end->reset#reset"} do |u| %>
    <input type="text" id="title" class="form-control" name="title" placeholder="Название комнаты">
    <div style="margin-top: 7px;">
    <%= u.submit "Создать", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>


<div class="list-group">
<% @rooms.each do |r| %>
<%= render "shared/room", r: r %>
<% end %>
</div>


<div class="d-flex justify-content-center" style="margin-top: 10px;">
<%= paginate @rooms %>
</div>
