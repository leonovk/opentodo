<% provide :page_title, 'Комнаты' %>
<% provide :current_page, 'Комнаты' %>

<h3>Все комнаты</h3>

<%= form_with model: @room do |u| %>
<div class="row g-3 align-items-center">
  <div class="col-auto">
    <input type="text" id="title" class="form-control" aria-describedby="passwordHelpInline" name="title" placeholder="Название комнаты">
  </div>
  <div class="col-auto">
    <span id="passwordHelpInline" class="form-text">
      Создать новую комнату
    </span>
  </div>
</div>
<div style="margin-top: 7px;">
<%= u.submit "Создать", class: 'btn btn-success' %>
</div>
<% end %>

  <div class="col-sm-6" style="margin-top: 20px;">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Комната</h5>
        <a href="#" class="btn btn-secondary">Открыть</a>
        <a href="#" class="btn btn-secondary">Удалить</a>
      </div>
    </div>
  </div>
</div>
<div class="container">
<% @roomsid.each do |r| %>
<p><%= r.room_id %></p>
<% end %>
</div>