<% provide :page_title, 'Комнаты' %>
<% provide :current_page, 'Комнаты' %>

<h3>Создать комнату</h3>

<%= form_with model: @room do |u| %>
<div class="row g-3 align-items-center">
  <div class="col-auto">
    <input type="text" id="title" class="form-control" aria-describedby="passwordHelpInline" name="title" placeholder="Название комнаты">
  </div>
  <div class="col-auto">
    <span id="passwordHelpInline" class="form-text">
      
    </span>
  </div>
</div>
<div style="margin-top: 7px;">
<%= u.submit "Создать", class: 'btn btn-success' %>
</div>
<% end %>
<h3 style="margin-top: 15px;">Все комнаты:</h3>


<div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    <% @rooms.each do |r| %>
    <li class="list-group-item"><a href="/rooms/<%= r.id %>" class="btn btn-light"><%= r.title %></a></li>
    <% end %>
  </ul>
</div>